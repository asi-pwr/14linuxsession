<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <android.support.v7.widget.CardView
        android:id="@+id/sponsors_item_card"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="4dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/sponsors_item_logo_card"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/sponsors_item_logo_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/unknown"/>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/sponsors_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_sponsor_name"
                android:textSize="26sp"
                android:maxLines="2"
                android:textStyle="bold"
                android:textColor="@color/session_light"
                android:layout_toRightOf="@id/sponsors_item_logo_card"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/sponsors_item_category"
                android:layout_below="@id/sponsors_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_sponsor"
                android:textSize="16sp"
                android:textStyle="italic"
                android:textColor="@color/session_gold"
                android:layout_toRightOf="@id/sponsors_item_logo_card"/>



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>